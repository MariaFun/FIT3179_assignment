{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "The Worlds Happiness Score",
  "width": 900,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/mariafun/assign/main/map/ne_110m_admin_0_countries.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/mariafun/interactive_chart/main/data/2019_edit.csv"
        },
        "key": "Country_or_region",
        "fields": [
          "Happiness_Score",
          "Perceptions of corruption",
          "long",
          "lat"
        ]
      }
    },
    {"calculate": "datum.Happiness_Score", "as": "Happiness Score"},
    {"calculate": "datum.Country_or_region", "as": "Country"}
  ],
  "layer": [
    {
      "projection": {"type": "equalEarth"},
      "mark": {"type": "geoshape", "stroke": "#757575", "strokeWidth": 0.5},
      "encoding": {"color": {"value": "#eee"}}
    },
    {
      "projection": {"type": "equalEarth"},
      "mark": {"type": "geoshape", "stroke": "#757575", "strokeWidth": 0.5},
      "encoding": {
        "color": {
          "field": "Happiness Score",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [3, 4, 5, 6, 7],
            "range": [
              "#08aedf",
              "#0fb8d2",
              "#12c3c6",
              "#1ad0b6",
              "#22dda8",
              "#29ed94"
            ]
          }
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "Happiness Score", "type": "quantitative"},
          {
            "field": "Perceptions of corruption",
            "type": "quantitative",
            "format": ","
          }
        ]
      }
    },
    {
      "mark": {"type": "circle"},
      "encoding": {
        "longitude": {"field": "long", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"},
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "Happiness Score", "type": "quantitative", "format": ","},
          {
            "field": "Perceptions of corruption",
            "type": "quantitative",
            "format": ","
          }
        ],
        "color": {"value": "black"},
        "size": {
          "field": "Perceptions of corruption",
          "type": "quantitative",
          "scale": {"domain": [0, 1]}
        }
      }
    }
  ],
  "config": {}
}