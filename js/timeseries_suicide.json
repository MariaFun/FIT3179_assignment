{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 900,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/mariafun/interactive_chart/main/data/master_cleaned.csv"
  },
  "transform": [
    {
      "filter": {
        "field": "country",
        "oneOf": [
          "Australia",
          "Singapore",
          "Russian Federation",
          "United States",
          "Japan",
          "France",
          "Ukraine",
          "Germany",
          "Rupublic of Korea",
          "Brazil",
          "United Kingdoms",
          "Italy",
          "Mexico",
          "Canada",
          "Italy",
          "Yemen",
          "Thailand",
          "Kazakhstan",
          "Spain",
          "Argentina",
          "Hungary",
          "Romania",
          "Belgium",
          "Colombia",
          "Netherlands",
          "Austria",
          "Czech Republic",
          "Cuba",
          "Chile",
          "Finland"
        ]
      }
    }
  ],
  "mark": "area",
  "selection": {
    "industry": {"type": "multi", "fields": ["country"], "bind": "legend"}
  },
  "encoding": {
    "x": {
      "timeUnit": "year",
      "field": "year",
      "title": "Year",
      "axis": {"domain": false, "format": "%Y", "tickSize": 0}
    },
    "y": {
      "aggregate": "sum",
      "field": "suicides/100k pop",
      "stack": "center",
      "axis": null,
      "title": "Country"
    },
    "color": {
      "field": "country",
      "title": "Country",
      "scale": {"scheme": "category20c"}
    },
    "opacity": {
      "condition": {"selection": "industry", "value": 1},
      "value": 0.2
    },
    "tooltip": [
      {"field": "country", "type": "nominal", "title": "Country"},
      {
        "field": "sum_suicides/100k pop",
        "type": "nominal",
        "title": "Suicides per 100k population",
        "format": ","
      }
    ]
  },
  "config": {}
}
